<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#f3f4f4"
                android:endColor="#f3f4f4"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="3px" android:color="#DCE1E3" />
            <solid android:color="@color/colorTextSlideDown"></solid>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#FBFBFB"
                android:endColor="#FBFBFB"
                android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="3px" android:color="#DCE1E3" />
            <solid android:color="@color/colorBackgroudOperator"></solid>
        </shape>
    </item>
</selector>